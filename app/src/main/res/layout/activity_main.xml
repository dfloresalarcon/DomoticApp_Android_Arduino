<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff"
    >


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/logodom"/>

            <Button
                android:id="@+id/btnAce"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/iconace"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btnAyu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/iconayu"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btnSal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/iconsal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>



        <ScrollView
            android:layout_width="290dp"
            android:layout_height="125dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:background="#FAFAFA">
            <TableLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnTem"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/icontem"/>

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#FA5858"
                        android:text="30ÂºC"
                        android:textSize="30dp"
                        android:textStyle="bold"/>
                    #android:background="#FA5858"

                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnLuz1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/iconluz"/>

                    <Button
                        android:id="@+id/btnLuz2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/iconluz"/>

                    <Button
                        android:id="@+id/btnLuz3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/iconluz"/>

                    <Button
                        android:id="@+id/btnLuz4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/iconluz"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnPor"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/iconpor"/>

                    <Switch
                        android:id="@+id/abrircerrar"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        />
                     #android:background="#9FF781"
                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnHum"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/iconhum"/>

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:text="9%"
                        android:textSize="30dp"
                        android:textColor="#819FF7"
                        android:textStyle="bold"
                        />
                    #android:background="#819FF7"
                </LinearLayout>
            </TableLayout>>
        </ScrollView>



        <ScrollView
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_marginTop="225dp"
            android:background="#FAFAFA"
            >

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="320dp"
                android:layout_height="200dp"
                />
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
